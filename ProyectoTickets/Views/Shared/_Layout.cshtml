                            <li class="menu-item">@Html.ActionLink("Administrar Usuarios", "Index", "AspNetUsers")</li>
                            <li class="menu-item">@Html.ActionLink("Administrar Roles", "Index", "AspNetRoles")</li>

                            <li class="divider"></li>
                            <li></li>
                        </ul>
                    </li>
                </ul>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TICKETS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @Scripts.Render("~/Scripts/DatePickerReady.js")
    @Scripts.Render("~/Scripts/main.js")
    
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
