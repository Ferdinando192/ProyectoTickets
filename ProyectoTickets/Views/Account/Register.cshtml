@model ProyectoTickets.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
    Layout = null;
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/loginResgistes.css" rel="stylesheet" />
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="omb_login">
        <h3 class="omb_authTitle">Crear Usuario <a href="#"></a></h3>


        <div class="row omb_row-sm-offset-3 omb_loginOr">
            <div class="col-xs-12 col-sm-6">
                <hr class="omb_hrOr">
                <span class="omb_spanOr"></span>
            </div>
        </div>

        <div class="row omb_row-sm-offset-3">
            <div class="col-lg-pull-1 col-sm-8">
                <form class="omb_loginForm">
                    <label>Correo</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <span class="help-block"></span>
                    <label>Clave</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <label>Confirmar clave</label>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <br />

                    <hr />
                    <input type="submit" class="btn btn-primary btn-block btn-lg" value="Registrarse" />

                </form>
            </div>
        </div>


    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
