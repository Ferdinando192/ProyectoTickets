@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="card-all">

        <div class="card-header text-center">

            <h2>Crear nueva Categoría</h2>

        </div>

        <div class="card-body ">

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <hr />


                <div class="row">
                    <div class="col-md-10 inputCreate">
                        <div class="form-group">
                            <label> @Html.DisplayName("Categoría")</label>
                            <div>
                                @Html.TextBoxFor(model => model.NOMBRE_CATEGORIA, new { @class = "form-control", @rows = "1", @cols = "4" })
                                @Html.ValidationMessageFor(model => model.NOMBRE_CATEGORIA, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer ">
                <button type="button"
                        class="btn btn-default modalBtn btnModals"
                        data-dismiss="modal">
                    Cerrar
                </button>

                <div class="pull-right">
                    <input type="submit" value="Crear" id="alertaCrearCategoria" name="alertaCrearCategoria" class=" btnModals btn btn-primary" />
                </div>
            </div>
        </div>
    </div>

}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/Scripts/main.js")
@Scripts.Render("~/bundles/bootstrap")
